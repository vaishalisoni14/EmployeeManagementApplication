@model EmployeeManagementApplication.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" autocomplete="off" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" autocomplete="off" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Gender</label>

                <select class="form-select" asp-for="GenderId">
                    <option selected>Select Gender</option>
                    <option value="1">Female</option>
                    <option value="2">Male</option>
                    <option value="3">Other</option>
                </select>
            </div>



            <div class="form-group">
                <label class="control-label">Date of Birth</label>

                <input asp-for="DateOfBirth" class="form-control" onchange="getAge(this)" id="datepicker"  placeholder="dd/mm/yyyy" autocomplete="off" />
                <script>
                    $('#datepicker').datepicker({
                        uiLibrary: 'bootstrap5',
                         format: 'dd/mm/yyyy',
                    });
                </script>

            </div>
        

            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">City</label>
                <input asp-for="City" class="form-control" autocomplete="off" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Counrty</label>
                <input asp-for="Country" class="form-control" autocomplete="off" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="EmailId" class="form-control" autocomplete="off" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Salary</label>
                <input asp-for="Salary" class="form-control" autocomplete="off" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hobbies</label>
                <input asp-for="Hobbies" class="form-control" autocomplete="off" />
                <span asp-validation-for="Hobbies" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Department ID</label>

                <select class="form-select" asp-for="DepartmentId">
                    <option selected>Select Department ID</option>
                    <option value="1">IT</option>
                    <option value="2">HR</option>
                    <option value="3">BDE</option>
                </select>

            </div>



            <div class="form-group">
                <label class="control-label">Work Address</label>
                <input asp-for="WorkAddress" class="form-control" autocomplete="off" />
                <span asp-validation-for="WorkAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Home Address</label>
                <input asp-for="HomeAddress" class="form-control" autocomplete="off" />
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Permanent Address</label>
                <input asp-for="PermanentAddress" class="form-control" autocomplete="off" />
                <span asp-validation-for="PermanentAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Demo">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script>
            function getAge(e) {
            let dateString = e.value;
            let [day, month, year] = dateString.split('/')
            var today = new Date();
            var birthDate = new Date(+year, +month - 1, +day);
            var age = today.getFullYear() - birthDate.getFullYear();
            var m = today.getMonth() - birthDate.getMonth();
            if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
                age--;
            }

            document.getElementById("Age").value = age;
            return age;
        }
    </script>
}